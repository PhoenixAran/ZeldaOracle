<UserControl x:Class="ZeldaEditor.Controls.ObjectTileEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZeldaEditor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <GroupBox x:Name="groupBox" Header="Tile Properties">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*" MinWidth="100"/>
                </Grid.ColumnDefinitions>
                <Label Content="ID:" Margin="0,16,0,0" VerticalAlignment="Top"  Grid.Column="0"/>
                <Label Content="Reset Condition:" Margin="0,43,0,0" VerticalAlignment="Top"  Grid.Column="0"/>

                <TextBox x:Name="textBoxID" Height="23" Margin="0,19,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Grid.Column="1"/>
                <ComboBox x:Name="comboBoxResetCondition" Margin="0,47,0,0" VerticalAlignment="Top"  Grid.Column="1"/>
            </Grid>
        </GroupBox>

    </Grid>
</UserControl>
