<UserControl x:Class="ZeldaEditor.Controls.TriggerEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZeldaEditor.Controls"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="760">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*" MinWidth="100"/>
        </Grid.ColumnDefinitions>
        <DockPanel x:Name="panelEvents"  Grid.Column="0">
            <ToolBar DockPanel.Dock="Top">
                <local:ImageButton x:Name="buttonAddTrigger" ToolTip="Create a new trigger" Source="/Resources/Icons/Plus.png" Click="OnAddTrigger"/>
                <local:ImageButton x:Name="buttonDeleteTrigger" ToolTip="Delete trigger" Source="/Resources/Icons/Delete.png" Click="OnDeleteTrigger"/>
                <Separator/>
                <local:ImageButton x:Name="buttonCut" ToolTip="Cut trigger" Source="/Resources/Icons/Cut.png" Click="OnCutTrigger"/>
                <local:ImageButton x:Name="buttonCopy" ToolTip="Copy trigger" Source="/Resources/Icons/Copy.png" Click="OnCopyTrigger"/>
                <local:ImageButton x:Name="buttonPaste" ToolTip="Paste trigger" Source="/Resources/Icons/Paste.png" Click="OnPasteTrigger"/>
            </ToolBar>
            <ListBox x:Name="listBoxTriggers" SelectionChanged="OnSelectTrigger"/>
        </DockPanel>
        <Grid Grid.Column="1" x:Name="panelEditTrigger">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*" MinHeight="100"/>
            </Grid.RowDefinitions>
            <ComboBox x:Name="comboBoxEventType" Grid.Row="0" Margin="10,10,0,15" HorizontalAlignment="Left" Width="150" SelectionChanged="OnSelectEvent"/>
            <xctk:WatermarkTextBox x:Name="textBoxTriggerName" BorderBrush="#FFC8C8C8" Margin="165,10,0,15" Watermark="Enter a script name" Padding="3,0" VerticalContentAlignment="Center"  HorizontalAlignment="Left" Grid.Row="0" TextChanged="OnRenameEvent" Width="180"/>
            <CheckBox x:Name="checkBoxInitiallyOn" Content="Initially On" Margin="394,13,82,0" VerticalAlignment="Top" HorizontalAlignment="Right" RenderTransformOrigin="0.566,-0.188" Grid.Row="0" Click="OnClickInitiallyOn"/>
            <CheckBox x:Name="checkBoxFireOnce" Content="Fire Once" Margin="473,13,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" RenderTransformOrigin="0.566,-0.188" Grid.Row="0" Click="OnClickFireOnce"/>
            <!--<local:ScriptTextEditor x:Name="scriptEditor" Grid.Row="1"/>-->
        </Grid>
    </Grid>
</UserControl>
